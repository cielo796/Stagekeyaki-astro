---
interface Props {
  mainText?: string[];
  subText?: string;
}

const { 
  mainText = [
    '利用者様のニーズに応え',
    '安心して過ごせる',
    '心に寄り添った介護サービスを',
    '提供いたします。'
  ],
  subText = '～ 住み慣れたふるさとは心地よく温かい ～'
} = Astro.props;
---

<div class="hero-banner">
  <div class="hero-text">
    {mainText.map((line) => (
      <span>{line}<br /></span>
    ))}
  </div>
  <div class="hero-sub">{subText}</div>
</div>

<style>
  .hero-banner {
    background: linear-gradient(135deg, #001a00 0%, #002200 50%, #001100 100%);
    border: 2px solid var(--primary-green);
    padding: 30px;
    margin-bottom: 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(0,255,65,0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(0,255,65,0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-text {
    font-family: 'VT323', monospace;
    font-size: 1.8em;
    color: var(--primary-green);
    text-shadow: var(--glow);
    margin-bottom: 15px;
    line-height: 1.5;
    position: relative;
    z-index: 1;
  }

  .hero-sub {
    color: #aaa;
    font-size: 1em;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .hero-text {
      font-size: 1.3em;
    }

    .hero-banner {
      padding: 20px;
    }
  }
</style>
